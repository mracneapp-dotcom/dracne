{
  "expo": {
    "name": "DrAcne",
    "slug": "dracne-ai-scanner",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "backgroundColor": "#FDF5E6",
    "splash": {
      "backgroundColor": "#FDF5E6"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "DrAcne uses the camera to take photos for AI acne analysis.",
        "NSPhotoLibraryUsageDescription": "DrAcne accesses your photo library to select images for AI acne analysis.",
        "UIBackgroundModes": ["remote-notification"]
      }
    },
    "android": {
      "package": "com.anonymous.dracneaiscanner",
      "adaptiveIcon": {
        "backgroundColor": "#FDF5E6"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.INTERNET",
        "android.permission.POST_NOTIFICATIONS"
      ]
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow DrAcne to access your camera for AI acne analysis."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow DrAcne to access your photos for AI acne analysis."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#7CB342",
          "sounds": []
        }
      ]
    ]
  }
}